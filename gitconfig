[alias]
	l = log --oneline
	ll = log -p
	s = status -sb
	cm = commit -m
	co = checkout
	br = branch -vv
	bra = branch -vv --all
	last = log -1 HEAD
	mend = commit --amend --no-edit
	a = add .
	di = diff
	db = branch -D
	nb = checkout -b
	psu = push --set-upstream origin
	stashes = stash list
	versions = tag -l --sort=version:refname
	pullrb = pull --rebase
	ff = merge --ff-only
	noff = merge --no-ff
	f = fetch --tags --prune
